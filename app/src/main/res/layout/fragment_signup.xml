<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/audiance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/dayzee"
        android:layout_marginTop="12dp"
        android:id="@+id/logo_dayzee"
        android:paddingHorizontal="48dp"
        android:layout_width="wrap_content"
        android:layout_height="120dp"/>

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:id="@+id/signup_cv"
        app:cardBackgroundColor="#60000000"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="132dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:fontFamily="sans-serif-light"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:text="@string/dayzee_connection"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:id="@+id/signup_status"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="14sp"
                android:text="@string/username_email"
                android:id="@+id/email_label"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/signup_status"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:visibility="invisible"
                android:fontFamily="sans-serif-light"
                android:backgroundTint="@android:color/white"
                android:layout_marginHorizontal="12dp"
                android:hint="@string/mail"
                android:maxLines="1"
                android:textColorHint="#60FFFFFF"
                android:id="@+id/signup_mail"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/email_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:fontFamily="sans-serif-light"
                android:backgroundTint="@android:color/white"
                android:layout_marginHorizontal="12dp"
                android:hint="@string/username_email"
                android:maxLines="1"
                android:textColorHint="#60FFFFFF"
                android:id="@+id/signin_mail_username"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/email_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:visibility="gone"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="14sp"
                android:text="@string/username_email"
                android:id="@+id/identifiant_label"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/signup_mail"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:visibility="gone"
                android:fontFamily="sans-serif-light"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:layout_marginHorizontal="12dp"
                android:hint="@string/identifiant"
                android:id="@+id/signup_identifiant"
                android:textColorHint="#60FFFFFF"
                android:textSize="14sp"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/identifiant_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="sans-serif-light"
                android:id="@+id/signup_password_label"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="@string/password"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup_identifiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:visibility="invisible"
                android:fontFamily="sans-serif-light"
                android:backgroundTint="@android:color/white"
                android:layout_marginHorizontal="12dp"
                android:hint="@string/password"
                android:textSize="14sp"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColorHint="#60FFFFFF"
                android:textColor="@android:color/white"
                android:id="@+id/signup_password"
                app:layout_constraintTop_toBottomOf="@id/signup_password_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:fontFamily="sans-serif-light"
                android:backgroundTint="@android:color/white"
                android:layout_marginHorizontal="12dp"
                android:hint="@string/password"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:textColorHint="#60FFFFFF"
                android:textColor="@android:color/white"
                android:id="@+id/signin_password"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/signup_password_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="sans-serif-light"
                android:layout_marginHorizontal="16dp"
                android:text="@string/forgotten_password"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:id="@+id/signup_forgotten_password"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <mehdi.sakout.fancybuttons.FancyButton
                fancy:fb_defaultColor="@android:color/white"
                fancy:fb_radius="90dp"
                fancy:fb_text="@string/login"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/signup_forgotten_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/signup_signup_btn"
                fancy:fb_textColor="@android:color/black"
                android:paddingVertical="6dp"
                android:paddingHorizontal="36dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:id="@+id/signup_signin_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <mehdi.sakout.fancybuttons.FancyButton
                fancy:fb_defaultColor="@android:color/transparent"
                fancy:fb_borderWidth="2dp"
                fancy:fb_borderColor="@android:color/white"
                fancy:fb_radius="90dp"
                fancy:fb_text="@string/sign_up"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/signup_forgotten_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/signup_signin_btn"
                fancy:fb_textColor="@android:color/white"
                android:paddingVertical="6dp"
                android:paddingHorizontal="36dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:id="@+id/signup_signup_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/guest_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        fancy:fb_defaultColor="@android:color/transparent"
        fancy:fb_borderWidth="1dp"
        fancy:fb_borderColor="@android:color/white"
        fancy:fb_radius="90dp"
        fancy:fb_textSize="12sp"
        fancy:fb_text="@string/continue_as_guest"
        android:layout_marginTop="16dp"
        fancy:fb_textColor="@android:color/white"
        android:paddingVertical="10dp"
        android:layout_marginBottom="72dp"
        android:layout_marginHorizontal="36dp"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>