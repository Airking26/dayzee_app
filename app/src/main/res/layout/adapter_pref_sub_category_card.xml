<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@color/colorBackground"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:targetApi="lollipop">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/sha"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/pref_sub_category_title_category"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="24dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:shadowColor="@android:color/black"
            android:scaleX="1"
            android:scaleY="1"
            android:shadowRadius="1.5"
            tools:text="Sports"
            app:layout_constraintBottom_toTopOf="@id/card_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/card_line"
            app:layout_constraintTop_toBottomOf="@id/pref_sub_category_title_category"
            style="@style/AppTheme.Divider.Toolbar"
            tools:ignore="MissingConstraints" />

        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/colorBackground"
            tools:listitem="@layout/item_pref_sub_category"
            android:id="@+id/pref_sub_category_rv"
            app:layout_constraintTop_toBottomOf="@id/card_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>