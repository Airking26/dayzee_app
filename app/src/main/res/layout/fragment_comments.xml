<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.profileFlow.settingsDirectory.NotificationManager">

    <LinearLayout
        android:id="@+id/comments_ll"
        style="@style/AppTheme.Toolbar.LinearLayout">

        <androidx.appcompat.widget.Toolbar style="@style/AppTheme.Toolbar">

            <TextView
                style="@style/AppTheme.Toolbar.Title"
                android:text="@string/comments"/>

        </androidx.appcompat.widget.Toolbar>

        <TextView style="@style/AppTheme.Divider.Toolbar"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        tools:listitem="@layout/item_comment"
        android:id="@+id/comments_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comments_ll"
        app:layout_constraintBottom_toTopOf="@id/card_line_0"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/card_line_0"
        app:layout_constraintBottom_toTopOf="@id/comments_edittext"
        style="@style/AppTheme.Divider.Toolbar"/>

    <EditText
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"
        android:padding="12dp"
        android:hint="@string/add_a_comment"
        android:background="@android:color/transparent"
        android:id="@+id/comments_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorStartGradient"
        android:text="@string/publish"
        app:layout_constraintTop_toTopOf="@id/comments_edittext"
        android:textSize="14sp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="@id/comments_edittext"
        app:layout_constraintBottom_toBottomOf="@id/comments_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>