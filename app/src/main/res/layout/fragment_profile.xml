<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/profile_ll"
        style="@style/AppTheme.Toolbar.LinearLayout">

        <androidx.appcompat.widget.Toolbar style="@style/AppTheme.Toolbar">

            <TextView
                android:id="@+id/profile_name_toolbar"
                style="@style/AppTheme.Toolbar.Title"
                android:text="Ronny" />

            <ImageView
                android:id="@+id/profile_settings_btn"
                style="@style/AppTheme.Toolbar.ImageRight"
                android:src="@drawable/ic_settings_black_24dp" />

            <ImageView
                android:id="@+id/profile_notif_btn"
                style="@style/AppTheme.Toolbar.ImageLeft"
                android:src="@drawable/ic_flag_black_24dp" />

        </androidx.appcompat.widget.Toolbar>

        <TextView style="@style/AppTheme.Divider.Toolbar"/>

    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_ll"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fitsSystemWindows="false"
        android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:background="@color/white"
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.timenoteco.timenote.androidView.CollapsibleToolbar
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/motionLayout"
                xmlns:fancy="http://schemas.android.com/apk/res-auto"
                tools:context=".view.profileFlow.Profile"
                app:layoutDescription="@xml/motion_scene"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="50dp"
                android:fitsSystemWindows="false"
                app:layout_scrollFlags="scroll|enterAlways|snap|exitUntilCollapsed">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_ll">

                    <TextView
                        android:id="@+id/profile_nbr_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:text="654"
                        android:textColor="@color/colorText"
                        android:textSize="17sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/profile_followers_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/followers"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profile_nbr_followers" />

                    <TextView
                        android:id="@+id/profile_nbr_following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="15dp"
                        android:text="233"
                        android:textColor="@color/colorText"
                        android:textSize="17sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profile_followers_label" />

                    <TextView
                        android:id="@+id/profile_following_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/following"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profile_nbr_following"
                        tools:text="Following" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/profile_calendar_btn"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/profile_calendar"/>

                        <TextView
                            android:text="mon."
                            tools:text="merc."
                            app:layout_constraintTop_toTopOf="parent"
                            android:textColor="@android:color/white"
                            android:fontFamily="sans-serif-light"
                            android:textSize="10sp"
                            android:id="@+id/profile_day_name_calendar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/colorText"
                            android:text="12"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/profile_day_name_calendar"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <ImageView
                        android:id="@+id/profile_pic_imageview"
                        android:layout_width="108dp"
                        android:layout_height="108dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_pref_holiday_clicked"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/profile_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/ic_profile_from"
                        android:text=" Israel"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profile_pic_imageview" />


                    <mehdi.sakout.fancybuttons.FancyButton
                        android:visibility="visible"
                        android:id="@+id/profile_modify_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profile_location"
                        fancy:fb_defaultColor="@android:color/holo_orange_dark"
                        fancy:fb_radius="5dp"
                        fancy:fb_text="@string/modify"
                        fancy:fb_textColor="@android:color/white" />


                    <mehdi.sakout.fancybuttons.FancyButton
                        android:visibility="invisible"
                        android:layout_marginStart="68dp"
                        fancy:fb_defaultColor="@color/colorAccentCustom"
                        fancy:fb_radius="5dp"
                        android:layout_marginTop="16dp"
                        fancy:fb_text="FOLLOW"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="30dp"
                        fancy:fb_textColor="@color/white"
                        android:gravity="center"
                        app:layout_constraintEnd_toStartOf="@id/profile_message_btn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profile_location"
                        android:id="@+id/profile_follow_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <mehdi.sakout.fancybuttons.FancyButton
                        android:visibility="invisible"
                        fancy:fb_defaultColor="@color/white"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_borderColor="@color/colorAccentCustom"
                        fancy:fb_radius="5dp"
                        android:layout_marginTop="16dp"
                        fancy:fb_text="@string/message"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="30dp"
                        fancy:fb_textColor="@color/colorAccentCustom"
                        android:gravity="center"
                        android:layout_marginEnd="68dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/profile_follow_btn"
                        app:layout_constraintTop_toBottomOf="@id/profile_location"
                        android:id="@+id/profile_message_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/profile_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Founder of Timenote"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profile_modify_btn" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/past_future"
                        app:layout_constraintTop_toBottomOf="@id/profile_desc"
                    app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:focusableInTouchMode="false"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <ImageView
                            android:layout_marginEnd="36dp"
                            android:tint="@android:color/black"
                            android:id="@+id/profile_arrow_back_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
                            app:layout_constraintEnd_toStartOf="@id/profile_arrow_forward_btn"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageView
                            android:layout_marginStart="36dp"
                            android:tint="@android:color/black"
                            android:id="@+id/profile_arrow_forward_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            app:layout_constraintEnd_toStartOf="@id/profile_view_type_btn"
                            app:layout_constraintStart_toEndOf="@id/profile_arrow_back_btn"
                            app:layout_constraintTop_toTopOf="parent"
                            />


                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/profile_view_type_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_view_module_black_24dp"
                            app:layout_constraintEnd_toStartOf="@id/profile_filter_btn"
                            app:layout_constraintStart_toEndOf="@id/profile_arrow_forward_btn"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/profile_filter_btn"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/logo"
                            android:tint="@android:color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/profile_view_type_btn"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <TextView
                            android:id="@+id/view_demarcation"
                            style="@style/AppTheme.Divider.Toolbar"
                            android:layout_marginTop="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.timenoteco.timenote.androidView.CollapsibleToolbar>
        </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/scrollable"
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:nestedScrollingEnabled="false"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        android:layout_gravity="bottom"
                        android:id="@+id/profile_rv"
                        android:background="@color/colorBackgroundForward"
                        android:paddingBottom="12dp"
                        android:clipToPadding="false"
                        tools:listitem="@layout/item_profile_timenote_list_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


            </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>