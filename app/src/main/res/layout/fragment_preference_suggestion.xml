<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootSuggestions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PreferenceSuggestion">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:id="@+id/pref_sub_category_toolbar"
        style="@style/AppTheme.Toolbar"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/suggestions"
            android:textColor="@color/colorText"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/suggestion_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:text="@string/ok"
            android:textColor="@color/colorTextSecondary"
            android:textSize="17sp" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pref_sub_category_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">

        <!-- **** Place Your Content Here **** -->

        <View android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/too"/>

    </FrameLayout>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/select_what_you_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/we_found_some_account_you_might_like"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pref_category_toolbar" />

        <androidx.recyclerview.widget.RecyclerView
            android:padding="16dp"
            tools:listitem="@layout/adapter_suggestion_card"
            android:id="@+id/suggestion_card_rv"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>