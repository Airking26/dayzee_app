<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.homeFlow.DetailedTimenote">


    <LinearLayout
        android:id="@+id/detailed_timenote_ll"
        style="@style/AppTheme.Toolbar.LinearLayout">

        <androidx.appcompat.widget.Toolbar style="@style/AppTheme.Toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samuel"
                android:id="@+id/detailed_timenote_username"
                android:textColor="@android:color/black"
                android:textSize="17sp"/>

                <ImageView
                    android:src="@drawable/ic_pref_culture"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@id/detailed_timenote_username"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <ImageView
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_more_vert_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <TextView style="@style/AppTheme.Divider.Toolbar"/>

    </LinearLayout>

    <ImageView
        android:src="@drawable/beach"
        android:background="#20aaaaaa"
        android:scaleType="centerCrop"
        android:id="@+id/detailed_timenote_pic_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailed_timenote_ll"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <TextView
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:id="@+id/detailed_timenote_title"
        android:textSize="18sp"
        android:text="BEACH PARTY"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/detailed_timenote_pic_imageview"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="104dp"
        android:id="@+id/detailed_timenote_year"
        android:text="2020"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/separator_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/detailed_timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@drawable/custom"
        android:layout_marginBottom="8dp"
        android:id="@+id/separator_1"
        app:layout_constraintEnd_toStartOf="@id/detailed_timenote_day_month"
        app:layout_constraintStart_toEndOf="@id/detailed_timenote_year"
        app:layout_constraintBottom_toBottomOf="@id/detailed_timenote_pic_imageview"
        android:layout_width="2dp"
        android:layout_height="48dp"/>

    <TextView
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:id="@+id/detailed_timenote_day_month"
        android:text="10\nAug"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/separator_2"
        app:layout_constraintStart_toEndOf="@id/separator_1"
        app:layout_constraintBottom_toBottomOf="@id/detailed_timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@drawable/custom"
        android:layout_marginBottom="8dp"
        android:id="@+id/separator_2"
        app:layout_constraintEnd_toStartOf="@id/detailed_timenote_time"
        app:layout_constraintStart_toEndOf="@id/detailed_timenote_day_month"
        app:layout_constraintBottom_toBottomOf="@id/detailed_timenote_pic_imageview"
        android:layout_width="2dp"
        android:layout_height="48dp"/>

    <TextView
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="104dp"
        android:id="@+id/detailed_timenote_time"
        android:text="15:25"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/separator_2"
        app:layout_constraintBottom_toBottomOf="@id/detailed_timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_heart"
        android:id="@+id/detailed_timenote_like"
        app:layout_constraintTop_toBottomOf="@id/detailed_timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_chat"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:id="@+id/detailed_timenote_comment"
        app:layout_constraintStart_toEndOf="@id/detailed_timenote_like"
        app:layout_constraintTop_toBottomOf="@id/detailed_timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_add_circle_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/detailed_timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:breakStrategy="simple"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="12sp"
        android:text="#Beach#Sunset#Love#Summer#Dance#Party#Beach#Sunset#Love#Summer#Dance#Party#Beach#Sunset#Love#Summer#Dance#Party#Beach#Sunset#Love#Summer#Dance#Party"
        android:id="@+id/detailed_timenote_username_desc"
        android:textColor="@color/colorText"
        app:layout_constraintTop_toBottomOf="@id/detailed_timenote_like"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:targetApi="m" />

    <androidx.core.widget.NestedScrollView
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailed_timenote_username_desc"
    android:layout_width="match_parent"
    android:layout_height="0dp">

        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/item_comment"
            android:id="@+id/detailed_timenote_comments_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>