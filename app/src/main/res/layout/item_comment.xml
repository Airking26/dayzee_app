<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="36dp"
        android:id="@+id/comment_user_pic_imageview"
        android:layout_height="36dp"/>

    <TextView
        android:fontFamily="sans-serif-light"
        android:id="@+id/comment_username_comment"
        android:layout_marginStart="8dp"
        android:textSize="13sp"
        android:textColor="@color/colorText"
        tools:text="Ronny Dahan"
        app:layout_constraintEnd_toStartOf="@id/comment_more"
        app:layout_constraintStart_toEndOf="@id/comment_user_pic_imageview"
        app:layout_constraintTop_toTopOf="@id/comment_user_pic_imageview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:visibility="visible"
        android:id="@+id/comment_more"
        android:layout_margin="8dp"
        android:src="@drawable/ic_more_vert_black_profile_24dp"
        app:layout_constraintBottom_toBottomOf="@id/comment_user_pic_imageview"
        app:layout_constraintTop_toTopOf="@id/comment_user_pic_imageview"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="16dp"
        android:layout_height="16dp"/>

    <TextView
        android:fontFamily="sans-serif-light"
        android:id="@+id/comment_time"
        android:textSize="12sp"
        tools:text="2h"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/comment_username_comment"
        app:layout_constraintStart_toEndOf="@id/comment_user_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        tools:text="Answer"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/comment_time"
        app:layout_constraintTop_toBottomOf="@id/comment_username_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>