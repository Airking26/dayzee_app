<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flipTimer="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:src="@drawable/ic_linkedin"
        android:id="@+id/timenote_pic_user_imageview"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="36dp"
        android:layout_height="36dp"/>

    <TextView
        android:id="@+id/timenote_username"
        android:layout_marginStart="8dp"
        tools:text="Samuel"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toEndOf="@id/timenote_pic_user_imageview"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/timenote_place"
        tools:text="34 Ohio Street"
        android:textColor="@color/colorText"
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/timenote_pic_user_imageview"
        app:layout_constraintTop_toBottomOf="@id/timenote_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:id="@+id/timenote_options"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_marginTop="8dp"
        android:id="@+id/timenote_vp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timenote_pic_user_imageview"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <TextView
        android:background="@drawable/gradient_timenote_top"
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:id="@+id/timenote_title"
        android:textSize="18sp"
        android:text="BEACH PARTY"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="@id/timenote_vp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="@drawable/gradient_timenote_bottom"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/timenote_vp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:shadowDy="1"
            android:shadowDx="1"
            android:shadowRadius="1.5"
            android:shadowColor="@android:color/black"
            android:id="@+id/timenote_year"
            android:layout_marginEnd="4dp"
            android:text="2020"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingHorizontal="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:background="@drawable/custom"
            android:id="@+id/separator_1"
            android:fontFamily="sans-serif-light"
            android:layout_width="2dp"
            android:layout_height="48dp"/>

        <TextView
            android:layout_marginHorizontal="4dp"
            android:paddingHorizontal="4dp"
            android:shadowDy="1"
            android:shadowDx="1"
            android:fontFamily="sans-serif-light"
            android:shadowRadius="1.5"
            android:shadowColor="@android:color/black"
            android:gravity="center"
            android:id="@+id/timenote_day_month"
            android:text="10Aug.\n15:45"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="2dp"
            android:background="@drawable/custom"
            android:fontFamily="sans-serif-light"
            android:id="@+id/separator_2"
            android:layout_width="2dp"
            android:layout_height="48dp"/>

        <TextView
            android:layout_marginStart="4dp"
            android:paddingHorizontal="4dp"
            android:shadowDy="1"
            android:shadowDx="1"
            android:shadowRadius="1.5"
            android:shadowColor="@android:color/black"
            android:id="@+id/timenote_time"
            android:text="11Aug.\n12:30"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/timenote_vp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorAccentCustom"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        android:gravity="end"
        android:fontFamily="sans-serif-light"
        android:id="@+id/timenote_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_chat"
        android:id="@+id/timenote_like"
        app:layout_constraintTop_toBottomOf="@id/timenote_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_share"
        android:layout_marginStart="8dp"
        android:id="@+id/timenote_comment"
        app:layout_constraintStart_toEndOf="@id/timenote_like"
        app:layout_constraintTop_toTopOf="@id/timenote_like"
        app:layout_constraintBottom_toBottomOf="@id/timenote_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <me.relex.circleindicator.CircleIndicator3
        app:ci_drawable="@drawable/dot_selected"
        app:ci_drawable_unselected="@drawable/dot_unselected"
        app:layout_constraintBottom_toBottomOf="@id/timenote_comment"
        app:layout_constraintTop_toTopOf="@id/timenote_comment"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:id="@+id/timenote_indicator"
        android:layout_width="wrap_content"
        android:layout_height="12dp"/>

    <ImageView
        android:id="@+id/timenote_plus"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_add_circle_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/timenote_like"
        app:layout_constraintTop_toTopOf="@id/timenote_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


     <LinearLayout
         android:gravity="center"
            android:id="@+id/timenote_fl"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/timenote_like"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/timenote_pic_participant_one"
                android:src="@drawable/beach"
                android:layout_marginEnd="-8dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <ImageView
                android:layout_marginEnd="-8dp"
                android:id="@+id/timenote_pic_participant_two"
                android:src="@drawable/beach"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <ImageView
                android:id="@+id/timenote_pic_participant_three"
                android:src="@drawable/beach"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

         <TextView
             android:id="@+id/timenote_added_by"
             android:layout_marginStart="8dp"
             android:textSize="12sp"
             android:textColor="@color/colorText"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

        </LinearLayout>



    <TextView
        android:breakStrategy="simple"
        android:layout_marginTop="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="12sp"
        tools:text="#Beach#Sunset#Love#Summer#Dance#Party#Beach#Sunset#Love#Summer#Dance#Party#Beach#Sunset#Love#Summer#Dance#Party#Beach#Sunset#Love#Summer#Dance#Party"
        android:id="@+id/timenote_username_desc"
        android:textColor="@color/colorText"
        app:layout_constraintTop_toBottomOf="@id/timenote_fl"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:targetApi="m" />

    <TextView
        android:id="@+id/timenote_see_more"
        android:textColor="@color/colorText"
        android:text="@string/see_more"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timenote_username_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>