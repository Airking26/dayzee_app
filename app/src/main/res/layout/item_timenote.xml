<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flipTimer="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:src="@drawable/ic_linkedin"
        android:id="@+id/timenote_pic_user_imageview"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="36dp"
        android:layout_height="36dp"/>

    <TextView
        android:id="@+id/timenote_username"
        android:layout_marginStart="8dp"
        tools:text="Samuel"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toEndOf="@id/timenote_pic_user_imageview"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/timenote_place"
        tools:text="34 Ohio Street"
        android:textColor="@color/colorText"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/timenote_pic_user_imageview"
        app:layout_constraintTop_toBottomOf="@id/timenote_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/beach"
        android:background="#20aaaaaa"
        android:scaleType="centerCrop"
        android:id="@+id/timenote_pic_imageview"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timenote_pic_user_imageview"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <TextView
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:id="@+id/timenote_title"
        android:textSize="18sp"
        android:text="BEACH PARTY"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/timenote_pic_imageview"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="104dp"
        android:id="@+id/timenote_year"
        android:text="2020"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/separator_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@drawable/custom"
        android:layout_marginBottom="8dp"
        android:id="@+id/separator_1"
        app:layout_constraintEnd_toStartOf="@id/timenote_day_month"
        app:layout_constraintStart_toEndOf="@id/timenote_year"
        app:layout_constraintBottom_toBottomOf="@id/timenote_pic_imageview"
        android:layout_width="2dp"
        android:layout_height="48dp"/>

    <TextView
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:id="@+id/timenote_day_month"
        android:text="10\nAug"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/separator_2"
        app:layout_constraintStart_toEndOf="@id/separator_1"
        app:layout_constraintBottom_toBottomOf="@id/timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@drawable/custom"
        android:layout_marginBottom="8dp"
        android:id="@+id/separator_2"
        app:layout_constraintEnd_toStartOf="@id/timenote_time"
        app:layout_constraintStart_toEndOf="@id/timenote_day_month"
        app:layout_constraintBottom_toBottomOf="@id/timenote_pic_imageview"
        android:layout_width="2dp"
        android:layout_height="48dp"/>

    <TextView
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="104dp"
        android:id="@+id/timenote_time"
        android:text="15:25"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/separator_2"
        app:layout_constraintBottom_toBottomOf="@id/timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.asp.fliptimerviewlibrary.CountDownClock
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@id/timenote_pic_imageview"
        android:id="@+id/timerProgramCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        flipTimer:almostFinishedCallbackTimeInSeconds="5"
        flipTimer:digitTopDrawable="@drawable/background_top_countdown"
        flipTimer:digitBottomDrawable="@drawable/background_bottom_countdown"
        flipTimer:animationDuration="850"
        flipTimer:countdownTickInterval="1000"
        flipTimer:digitDividerColor="@color/transparent"
        flipTimer:digitPadding="2dp"
        flipTimer:digitTextColor="@color/black"
        flipTimer:digitTextSize="18sp"
        flipTimer:digitWidth="21dp"
        flipTimer:halfDigitHeight="16dp"
        flipTimer:resetSymbol="8"
        flipTimer:splitterPadding="0dp"
        />

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_heart"
        android:id="@+id/timenote_like"
        app:layout_constraintTop_toBottomOf="@id/timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_chat"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:id="@+id/timenote_comment"
        app:layout_constraintStart_toEndOf="@id/timenote_like"
        app:layout_constraintTop_toBottomOf="@id/timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/timenote_plus"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_add_circle_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:breakStrategy="simple"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="12sp"
        tools:text="#Beach#Sunset#Love#Summer#Dance#Party#Beach#Sunset#Love#Summer#Dance#Party#Beach#Sunset#Love#Summer#Dance#Party#Beach#Sunset#Love#Summer#Dance#Party"
        android:id="@+id/timenote_username_desc"
        android:textColor="@color/colorText"
        app:layout_constraintTop_toBottomOf="@id/timenote_like"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:targetApi="m" />

    <TextView
        android:id="@+id/timenote_see_more"
        android:textColor="@color/colorText"
        android:text="@string/see_more"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timenote_username_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>