<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context=".view.loginFlow.Login">

    <ImageView
        android:id="@+id/login_image"
        android:scaleType="centerCrop"
        android:src="@drawable/gradient_futur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:paddingHorizontal="24dp"
        android:src="@drawable/dayzee"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="144dp"
        android:shadowRadius="1.0"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:shadowColor="@color/colorText"
        android:text="Dayzee"
        android:textColor="@color/colorBackground"
        android:textSize="72sp"
        android:id="@+id/timenote_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:shadowRadius="1.0"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:shadowColor="@color/colorText"
        android:fontFamily="sans-serif-light"
        android:text="Makes Your Life Easy"
        android:textSize="18sp"
        android:textColor="@color/colorBackground"
        app:layout_constraintTop_toBottomOf="@id/timenote_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <mehdi.sakout.fancybuttons.FancyButton
        fancy:fb_defaultColor="@color/colorBackground"
        fancy:fb_radius="90dp"
        fancy:fb_text="Login / Sign Up"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        fancy:fb_textColor="@color/colorText"
        android:paddingVertical="12dp"
        android:paddingHorizontal="60dp"
        android:layout_marginBottom="144dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>