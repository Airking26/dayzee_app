<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.createTimenoteFlow.PreviewTimenoteCreated">

    <LinearLayout
        android:id="@+id/preview_created_timenote_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/preview_created_timenote_toolbar"
            style="@style/AppTheme.Toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorText"
                android:textSize="17sp"
                android:text="@string/preview" />

            <TextView
                android:id="@+id/preview_created_timenote_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:text="@string/done"
                android:textColor="@color/colorTextSecondary"
                android:textSize="17sp" />


        </androidx.appcompat.widget.Toolbar>

        <View
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/preview_created_timenote_toolbar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/too" />

    </LinearLayout>

    <ImageView
        android:layout_marginTop="24dp"
        android:background="@android:color/white"
        android:id="@+id/preview_created_timenote_pic_imageview"
        app:layout_constraintTop_toBottomOf="@id/preview_created_timenote_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <TextView
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:id="@+id/preview_created_timenote_title"
        android:textSize="18sp"
        android:text="BEACH PARTY"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/preview_created_timenote_pic_imageview"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="104dp"
        android:id="@+id/preview_created_timenote_year"
        android:text="2020"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/separator_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/preview_created_timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:layout_marginBottom="8dp"
        android:id="@+id/separator_1"
        android:background="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/preview_created_timenote_day_month"
        app:layout_constraintStart_toEndOf="@id/preview_created_timenote_year"
        app:layout_constraintBottom_toBottomOf="@id/preview_created_timenote_pic_imageview"
        android:layout_width="1dp"
        android:layout_height="48dp"/>

    <TextView
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/preview_created_timenote_day_month"
        android:text="10\nAug"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@id/separator_2"
        app:layout_constraintStart_toEndOf="@id/separator_1"
        app:layout_constraintBottom_toBottomOf="@id/preview_created_timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:layout_marginBottom="8dp"
        android:id="@+id/separator_2"
        android:background="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/preview_created_timenote_time"
        app:layout_constraintStart_toEndOf="@id/preview_created_timenote_day_month"
        app:layout_constraintBottom_toBottomOf="@id/preview_created_timenote_pic_imageview"
        android:layout_width="1dp"
        android:layout_height="48dp"/>

    <TextView
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1.5"
        android:shadowColor="@android:color/black"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="104dp"
        android:id="@+id/preview_created_timenote_time"
        android:text="15:25"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/separator_2"
        app:layout_constraintBottom_toBottomOf="@id/preview_created_timenote_pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/preview_created_timenote_place"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_profile_from"
        android:text="Gare de Marseille St-Charles"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/preview_created_timenote_pic_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorText"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/where_cardview"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/preview_created_timenote_place"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/share_label"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_share_black_24dp"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                android:text="@string/share_to"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginStart="24dp"
                android:id="@+id/preview_created_timenote_facebook"
                android:src="@drawable/ic_facebook"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/preview_created_timenote_twitter"
                app:layout_constraintTop_toBottomOf="@id/share_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/preview_created_timenote_twitter"
                android:src="@drawable/ic_twitter"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/preview_created_timenote_linkedin"
                app:layout_constraintTop_toBottomOf="@id/share_label"
                app:layout_constraintStart_toEndOf="@id/preview_created_timenote_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/preview_created_timenote_linkedin"
                android:src="@drawable/ic_linkedin"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/preview_created_timenote_instagram"
                app:layout_constraintTop_toBottomOf="@id/share_label"
                app:layout_constraintStart_toEndOf="@id/preview_created_timenote_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginEnd="24dp"
                android:id="@+id/preview_created_timenote_instagram"
                android:src="@drawable/ic_instagram"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/share_label"
                app:layout_constraintStart_toEndOf="@id/preview_created_timenote_linkedin"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>