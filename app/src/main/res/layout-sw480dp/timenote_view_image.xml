<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:layout_constrainedHeight="true"
        android:background="@color/colorBackground"
        android:id="@+id/create_timenote_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="200dp"
        app:layout_constraintHeight_max="700dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/timenote_crop_pic"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_aspect_ratio_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_baseline_add_bordered_24"
        android:layout_margin="16dp"
        android:id="@+id/timenote_add_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/timenote_delete_pic"
        android:src="@drawable/ic_baseline_close_bordered_24"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@id/timenote_add_pic"
        app:layout_constraintTop_toBottomOf="@id/timenote_add_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>