<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorText">@color/colorText</item>
        <item name="colorTextSecondary">@color/colorTextSecondary</item>
        <item name="colorTextThirdly">@color/colorTextThirdly</item>
        <item name="colorBackgroundForward">@color/colorBackgroundForward</item>
        <item name="colorBackgroundBackward">@color/colorBackgroundBackward</item>
        <item name="colorAccentCustom">@color/colorAccentCustom</item>
        <item name="colorStartGradient">@color/colorStartGradient</item>
        <item name="colorEndGradient">@color/colorEndGradient</item>
        <item name="colorYellow">@color/colorYellow</item>
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorToolbar">@color/colorToolbar</item>
        <item name="colorDivider">@color/colorDivider</item>
        <item name="colorBackgroundSettings">@color/colorBackgroundSettings</item>
        <item name="colorElevated">@color/colorElevated</item>
    </style>


    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="AppTheme.Divider.Toolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="AppTheme.Toolbar.LinearLayout" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/colorBackground</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppTheme.Toolbar.TextLeft" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="AppTheme.Toolbar.TextRight" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppTheme.Toolbar.ImageRight" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Toolbar.ImageLeft" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
