<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorText</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorText">@color/colorText</item>
        <item name="colorTextSecondary">@color/colorTextSecondary</item>
        <item name="colorTextThirdly">@color/colorTextThirdly</item>
        <item name="colorBackgroundForward">@color/colorBackgroundForward</item>
        <item name="colorBackgroundBackward">@color/colorBackgroundBackward</item>
        <item name="colorAccentCustom">@color/colorAccentCustom</item>
        <item name="colorStartGradient">@color/colorStartGradient</item>
        <item name="colorEndGradient">@color/colorEndGradient</item>
        <item name="colorYellow">@color/colorYellow</item>
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorToolbar">@color/colorToolbar</item>
        <item name="colorDivider">@color/colorDivider</item>
        <item name="colorBackgroundSettings">@color/colorBackgroundSettings</item>
        <item name="colorElevated">@color/colorElevated</item>
        <item name="colorHashtag">@color/colorHashtag</item>
        <item name="colorBackgroundlogin">@color/colorBakcgroundlogin</item>
        <item name="md_corner_radius">16dp</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="AppTheme.Divider.Toolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="AppTheme.Toolbar.LinearLayout" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/colorBackground</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppTheme.Toolbar.TextLeft" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="AppTheme.Toolbar.TextRight" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppTheme.Toolbar.ImageRight" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Toolbar.ImageLeft" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- MaterialSearchBarLightTheme-->
    <style name="MaterialSearchBarLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mt_searchBarColor">@color/searchBarPrimaryColor</item>
        <item name="mt_dividerColor">@color/searchBarDividerColor</item>
        <item name="mt_navIconTint">@color/searchBarNavIconTintColor</item>
        <item name="mt_searchIconTint">@color/searchBarSearchIconTintColor</item>
        <item name="mt_clearIconTint">@color/searchBarClearIconTintColor</item>
        <item name="mt_menuIconTint">@color/searchBarMenuIconTintColor</item>
        <item name="mt_backIconTint">@color/searchBarBackIconTintColor</item>
        <item name="mt_textCursorTint">@color/searchBarCursorColor</item>
        <item name="mt_textColor">@color/searchBarTextColor</item>
        <item name="mt_hintColor">@color/searchBarHintColor</item>
        <item name="mt_placeholderColor">@color/searchBarPlaceholderColor</item>
        <item name="mt_highlightedTextColor">@color/searchBarTextHighlightColor</item>
    </style>

    <!-- MaterialSearchBarDarkTheme-->
    <style name="MaterialSearchBarDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mt_searchBarColor">@color/searchBarPrimaryColorDark</item>
        <item name="mt_dividerColor">@color/searchBarDividerColorDark</item>
        <item name="mt_navIconTint">@color/searchBarNavIconTintColorDark</item>
        <item name="mt_searchIconTint">@color/searchBarSearchIconTintColorDark</item>
        <item name="mt_clearIconTint">@color/searchBarClearIconTintColorDark</item>
        <item name="mt_menuIconTint">@color/searchBarMenuIconTintColorDark</item>
        <item name="mt_backIconTint">@color/searchBarBackIconTintColorDark</item>
        <item name="mt_textCursorTint">@color/colorAccent</item>
        <item name="mt_textColor">@color/searchBarTextColorDark</item>
        <item name="mt_hintColor">@color/searchBarHintColorDark</item>
        <item name="mt_placeholderColor">@color/searchBarPlaceholderColorDark</item>
        <item name="mt_highlightedTextColor">@color/searchBarTextHighlightColorDark</item>
    </style>

    //===================================== Theme Dracula ==========================================

    <style name="Matisse.Dracula" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorText</item>
        <item name="album.dropdown.title.color">@color/colorText</item>
        <item name="album.dropdown.count.color">@android:color/darker_gray</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="album.thumbnail.placeholder">@color/colorBackground</item>
        <item name="album.emptyView">@drawable/ic_empty_dracula</item>
        <item name="album.emptyView.textColor">@android:color/darker_gray</item>
        <item name="item.placeholder">@color/colorBackground</item>
        <item name="item.checkCircle.backgroundColor">@android:color/black</item>
        <item name="item.checkCircle.borderColor">@color/colorBackground</item>
        <item name="page.bg">@color/colorBackground</item>
        <item name="bottomToolbar.bg">@color/colorBackground</item>
        <item name="bottomToolbar.preview.textColor">@color/colorText</item>
        <item name="bottomToolbar.apply.textColor">@color/colorText</item>
        <item name="preview.bottomToolbar.back.textColor">@color/colorBackground</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/colorText</item>
        <item name="android:listPopupWindowStyle">@style/Popup.Dracula</item>
        <item name="listPopupWindowStyle">@style/Popup.Dracula</item>
        <item name="capture.textColor">@color/dracula_capture</item>
    </style>


    <style name="Popup.Dracula" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">@color/colorBackground</item>
    </style>
</resources>
