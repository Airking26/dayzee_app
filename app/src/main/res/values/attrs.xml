    <declare-styleable name="ExpandIconView">
        <attr name="eiv_roundedCorners" format="boolean"/>
        <attr name="eiv_switchColor" format="boolean"/>
        <attr name="eiv_color" format="color"/>
        <attr name="eiv_colorMore" format="color"/>
        <attr name="eiv_colorLess" format="color"/>
        <attr name="eiv_colorIntermediate" format="color"/>
        <attr name="eiv_animationDuration" format="integer"/>
        <attr name="eiv_padding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PolygonImageView" >
        <attr name="poly_vertices" format="integer" />
        <attr name="poly_rotation_angle" format="float" />
        <attr name="poly_corner_radius" format="float" />
        <attr name="poly_border" format="boolean" />
        <attr name="poly_border_color" format="color" />
        <attr name="poly_border_width" format="dimension" />
        <attr name="poly_shadow" format="boolean" />
        <attr name="poly_shadow_color" format="color" />
    </declare-styleable>

    <declare-styleable name="PolygonImageViewTheme" >
        <attr name="polygonImageViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="SocialViewStyle">
        <attr name="socialViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="UICalendar">

        <attr name="showWeek" format="boolean" />
        <attr name="hideArrows" format="boolean" value="true"/>
        <attr name="datePattern" format="string" value="MMMM"/>

        <attr name="firstDayOfWeek" format="enum">
            <enum name="sunday" value="0" />
            <enum name="monday" value="1" />
            <enum name="tuesday" value="2" />
            <enum name="wednesday" value="3" />
            <enum name="thursday" value="4" />
            <enum name="friday" value="5" />
            <enum name="saturday" value="6" />
        </attr>

        <attr name="state" format="enum">
            <enum name="expanded" value="0" />
            <enum name="collapsed" value="1" />
        </attr>

        <attr name="textColor" format="color" />
        <attr name="primaryColor" format="color" />

        <attr name="eventColor" format="color" />


        <attr name="todayItem_textColor" format="color" />
        <attr name="todayItem_background" format="integer" />

        <attr name="selectedItem_textColor" format="color" />
        <attr name="selectedItem_background" format="integer" />

        <attr name="buttonLeft_drawable" format="integer" />
        <attr name="buttonRight_drawable" format="integer" />

        <attr name="buttonLeft_drawableTintColor" format="color" />
        <attr name="buttonRight_drawableTintColor" format="color" />

        <attr name="expandIconColor" format="color" />

    </declare-styleable>

    <declare-styleable name="MaterialSearchBar">
        //Base
        <attr name="mt_speechMode" format="boolean"/>
        <attr name="mt_maxSuggestionsCount" format="integer"/>
        <attr name="mt_navIconEnabled" format="boolean"/>
        <attr name="mt_roundedSearchBarEnabled" format="boolean"/> //(API 21+ , Will Revert To Default Shape On Lower
        <attr name="mt_menuDividerEnabled" format="boolean"/>
        <attr name="mt_dividerColor" format="color"/>
        <attr name="mt_searchBarColor" format="color"/>

        //Icons
        <attr name="mt_menuIconDrawable" format="reference"/>
        <attr name="mt_searchIconDrawable" format="reference"/>
        <attr name="mt_speechIconDrawable" format="reference"/>
        <attr name="mt_backIconDrawable" format="reference"/>
        <attr name="mt_clearIconDrawable" format="reference"/>
        <attr name="mt_navIconTint" format="color"/>
        <attr name="mt_menuIconTint" format="color"/>
        <attr name="mt_searchIconTint" format="color"/>
        <attr name="mt_backIconTint" format="color"/>
        <attr name="mt_clearIconTint" format="color"/>
        <attr name="mt_navIconUseTint" format="boolean"/>
        <attr name="mt_menuIconUseTint" format="boolean"/>
        <attr name="mt_searchIconUseTint" format="boolean"/>
        <attr name="mt_backIconUseTint" format="boolean"/>
        <attr name="mt_clearIconUseTint" format="boolean"/>
        <attr name="mt_borderlessRippleEnabled" format="boolean"/>

        //Text
        <attr name="mt_hint" format="string"/>
        <attr name="mt_placeholder" format="string"/>
        <attr name="mt_textColor" format="color"/>
        <attr name="mt_hintColor" format="color"/>
        <attr name="mt_placeholderColor" format="color"/>
        <attr name="mt_textCursorTint" format="color"/>
        <attr name="mt_leftTextSelectorDrawable" format="reference"/>
        <attr name="mt_middleTextSelectorDrawable" format="reference"/>
        <attr name="mt_rightTextSelectorDrawable" format="reference"/>
        <attr name="mt_leftTextSelectorTint" format="color"/>
        <attr name="mt_middleTextSelectorTint" format="color"/>
        <attr name="mt_rightTextSelectorTint" format="color"/>
        <attr name="mt_handlesTintEnabled" format="boolean"/>
        <attr name="mt_highlightedTextColor" format="color"/>
