    <attr name="colorTextThirdly" format="reference|color" />
    <attr name="colorBackgroundForward" format="reference|color" />
    <attr name="colorBackgroundBackward" format="reference|color" />
    <attr name="colorAccentCustom" format="reference|color" />
    <attr name="colorStartGradient" format="reference|color"/>
    <attr name="colorEndGradient" format="reference|color"/>
    <attr name="colorYellow" format="reference|color"/>
    <attr name="colorBackground" format="reference|color"/>
